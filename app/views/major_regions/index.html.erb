<div class="col-md-8 col-sm-8">
  <p id="notice"><%= notice %></p>

  <h1>Listing Major Regions</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tr>
        <td>Major_id</td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <tbody>
      <% @major_regions.each do |major_region| %>
        <tr>
          <td><%= major_region.major_id%></td>
          <td><%= link_to 'Show', major_region ,class:'btn btn-default'%></td>
          <td><%= link_to 'Edit', edit_major_region_path(major_region), class:'btn btn-primary'%></td>
          <td><%= link_to 'Destroy', major_region, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Major region', new_major_region_path, class: 'btn btn-primary' %>
</div>
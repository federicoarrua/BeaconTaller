<%= form_for(@minor_region) do |f| %>
  <% if @minor_region.errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <ul>
      <% @minor_region.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :minor_id %>
    <%= f.text_field :minor_id, autofocus: true, class:'form-control input-medium' %>

    <br></br>

    <%= f.label :Descripcion %>
    <%= f.text_area :description, autofocus: true, class:'form-control input-medium', rows:3 %>
  </div>
  <br></br>

  <div class="actions">
    <%= f.submit "Aceptar", class:'btn btn-primary'%>
  </div>
<% end %>


<h1>Listing Minor Regions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @minor_regions.each do |minor_region| %>
      <tr>
        <td><%= link_to 'Show', minor_region %></td>
        <td><%= link_to 'Edit', edit_minor_region_path(minor_region) %></td>
        <td><%= link_to 'Destroy', minor_region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

